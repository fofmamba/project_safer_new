{% extends '@EasyAdmin/page/content.html.twig' %}
{% block page_title %}
{% endblock %}
{% block main %}
        <div id="layoutSidenav">
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <div class="row">
                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-primary text-white text-center mb-4">
                                <h1>   <div class="card-body text-white">  {{count_bien }} </div> </h1>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <h5> <div class="small text-white text-center"> Nombre de bien(s)</div></h5>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-warning text-white text-center mb-4">
                                <h1>   <div class="card-body text-white"> {{count_category }}</div> </h1>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <h5> <div class="small text-white text-center"> Nombre de categorie(s)</div></h5>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-success text-white text-center mb-4">
                                <h1>   <div class="card-body text-white">  {{count_utilisateurs }} </div> </h1>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <h5> <div class="small text-white text-center"> Nombre d'utilisateur(s)</div></h5>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-danger text-white text-center mb-4">
                                <h1>   <div class="card-body text-white">  {{favoris }} </div> </h1>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <h5> <div class="small text-white text-center"> Nombre de favoris(s)</div></h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
        

{% endblock %}