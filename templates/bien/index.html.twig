{% extends 'base.html.twig' %}
{% block body %}
        <main class="main">
            <section class="banner-section position-relative">
                <div class="container">
                    <div class="banner-slider">
                        <div class="banner-slider-one pagination-square align-pagination-square">
                    {% for slide_home in slide %}
                        <div class="banner-slider-single banner-animation-col">
                                <div class="row align-items-center">
                                    <div class="col-md-6 col-lg-6">
                                        <div class="banner-content">
                                            <h1 class="banner-title mb-25">
                                                <span>{{ slide_home.Titre }}</span>
                                            </h1>
                                            <p>{{ slide_home.contenue }}</p>
                                            <a href="shop-grid.html" class="shop-now">Shop Now <i class="feather-arrow-right ml-5"></i></a>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-6">
                                        <div class="single-banner-slider">
                                            <img  src=" uploads/slide/{{slide_home.image}}">
                                        </div>
                                    </div>
                                </div>
                        </div>
                    {% else %}
                        no records found
                    {% endfor %}
                        </div>
                    </div>
                </div>
            </section>

            <!-- Trending Products -->
			<section class="trending-products">
                <div class="container">
                    <div class="section-title wow animate__animated animate__fadeIn" data-wow-delay="0">
                        <p>A highly efficient slip-ring scanner for today's diagnostic requirements.</p>
                    </div>
                    <div class="row">
                        <div class="col-xl-12">
							<div class="feature-product-slider arrow-center position-relative">
                                <div class="slider-arrow slider-arrow-two carousel-4-columns-arrow" id="carousel-5-columns-arrows"></div>
                                <div class="carousel-4-columns carousel-arrow-center" id="carousel-5-columns">
                                    <!-- Product box -->
                                    {% for bien in biens %}
                                    <div class="product-card wow animate__animated animate__fadeIn" data-wow-delay=".1s">
                                        <div class="product-img-col">
                                            <div class="product-img product-img-zoom">
                                                <a href="view-product.html">
                                                    <img  src="uploads/biens/{{ bien.image }}" alt="">
                                                </a>
                                            </div>
                                            <div class="product-badge">
                                                <span class="best">{{ bien.status ? 'Location' : 'Vente' }}</span>
                                            </div>
                                        </div>
                                        <div class="product-content">
                                            <div class="sold-group mb-15">
                                                <p>Sold By <span> Global Store</span></p>
                                            </div>
                                            <h2><a href="view-product.html">{{ bien.titre }}</a></h2>
                                            <div class="product-card-bottom ">
                                                <div class="rating d-inline-block">
													<td>{{ bien.descriptif }}</td>
												</div>
                                            </div>
                                            <div class="product-card-bottom ">
                                                <div class="product-price">
                                                    <span>{{ bien.prix }} $</span>
                                                </div>
                                            </div>
                                            <div class="add-feature">
                                                <a href="cart.html" class="btn btn-primary"><i class="feather-shopping-bag me-1"></i>Add</a>
                                                <div class="product-details-inner">
                                                    <a href="{{ path('app_bien_show', {'id': bien.id}) }}"><i class="fi-rs-eye"></i></a>
                                                    <a aria-label="Quick view" class="product-btn" data-bs-toggle="modal" data-bs-target="#quickViewModal"><i class="fi-rs-search"></i></a>
                                                    <a aria-label="Add To Wishlist" class="product-btn" href="wishlist.html"><i class="fi-rs-heart"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /Product box -->
                                    {% else %}
                                            <p colspan="7">no records found</p>
                                    {% endfor %}
                                </div>
                            </div>
						</div>
                    </div>
                </div>
            </section>
            <!-- /Trending Products -->
{% endblock %}
