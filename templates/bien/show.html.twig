{% extends 'base.html.twig' %}

{% block title %}Bien{% endblock %}

{% block body %}
    <h1>Bien</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bien.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ bien.numero }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ bien.titre }}</td>
            </tr>
            <tr>
                <th>Descriptif</th>
                <td>{{ bien.descriptif }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ bien.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ bien.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_bien_index') }}">back to list</a>

